<script>

var faultlogs = [];
var pagesize = 10;

var vm = new Vue({
	el: "#faultlog-table",
	data: {	
		faultlog:{},
		faultlogeditshow:false,
		faultlogshow:true,
		faultlogaddshow:false,
		activeNumber:1,
		pageCout:1,
    pagen:1,//页数
		faultlogs: [],
		faulttype: [],
    represults: [],
    supresults: []
	},
	methods: {
		viewfaultlog: function (faultlog) {	
					
			g_util.load("/faultlogquery",
				true,
				function (result) {	
				lyview(result);
			}, {
				"faultlogid": faultlog.id
			});
		},
		editfaultlog: function (faultlog) {		
			editview(faultlog);
		},
		deletefaultlog: function (faultlog,faultlogindex) {
			layer.confirm('删除&nbsp&nbsp' + faultlog.materialtype + '&nbsp?', {
				icon: 2,
				title: '警告：请谨慎操作，删除动作不可逆！'
			}, function (index) {
				g_util.load("/faultlogdelete", false, function (ret) {	
					var mindex =0;
					for(var i=0;i<faultlogs.length;i++){
						if(faultlogs[i].id == faultlog.id){
						mindex = i;
						}
					}
					faultlogs.splice(mindex,1);		
					reshen(vm.activeNumber);
          window.location.reload();
				}, {
					"faultlogid": faultlog.id
				});
				layer.close(index);
			});
		},
		addfaultlog:function () {
			vm.faultlogaddshow = true;				
		},
		closefaultlogadd:function(){
			vm.faultlogaddshow = false;	
		},
		submitfaultlogadd:function(){
		
			//vm.faultlog.age = new Date().toLocaleDateString();
			//vm.faultlog.status = 0;
			delete vm.faultlog.id;
			delete vm.faultlog.createdAt;
			delete vm.faultlog.updatedAt;
			delete vm.faultlog.deletedAt;
			
			console.log(JSON.stringify(vm.faultlog));
			
			g_util.load("/faultlogadd",
				true,
				function (result) {	
				if(result.status==0){
					layer.alert("添加成功");
					vm.faultlogaddshow = false;
					faultlogs.push(result.result);
					reshen(vm.pageCout);
				}else{
					layer.alert("添加失败,错误原因为"+JSON.stringify(result.result));
				}	
			},vm.faultlog);			
		},
		convertDate:function(date){
			return new Date(date).toLocaleString();
		},
     convertrepresult: function(represult) {
                for (var i = 0; i < vm.represults.length; i++) {
                    if (vm.represults[i].id == represult) {
                        return vm.represults[i].name;
                    }
                }
            },
    convertsupresult: function(supresult) {
                for (var i = 0; i < vm.supresults.length; i++) {
                    if (vm.supresults[i].id == supresult) {
                        return vm.supresults[i].name;
                    }
                }
            },
		gopage: function(n) {
                vm.pagen=1;
                reshen(n);
                vm.pagen=n;
            },
	}
})

function reshen(n){
	vm.pageCout = Math.ceil(faultlogs.length/pagesize);
	n=n?n:1;
	vm.faultlogs = faultlogs.slice((n-1)*10,n*10);
	vm.activeNumber = n;
}

function editview(faultlog){
	vm.faultlog = faultlog;
	delete vm.faultlog.createdAt;
	delete vm.faultlog.updatedAt;
	delete vm.faultlog.deletedAt;
	vm.faultlogeditshow = true;
	layer.open({
		type:1,
		title:"维修信息修改",
		area: '800px',		
		scrollbar : false,
		content:$("#editdlg"),
		btn:["修改","关闭"],
		yes:function(index){			
			layer.close(index);
	
			g_util.load("/faultlogedit",
			true,
			function (result) {
			if(result=="ok"){
					vm.faultlogeditshow = false;
					faultlog = vm.faultlog;
					layer.alert("修改成功");
				}else{
					layer.alert("修改失败,错误原因为"+result.result);
				}	
			}, vm.faultlog);
			
			
		},
		cancel:function(index){	
			vm.faultlogeditshow = false;				
			layer.close(index);
      window.location.reload();
		},
		btn2:function(index){	
			vm.faultlogeditshow = false;				
			layer.close(index);
      window.location.reload();
		}
		
	});

}

var g_util = new Utils();

g_util.load("/faultlog",
	true,
	function (ret) {
	faultlogs = ret;
	reshen(1);	
}, {});

g_util.load("/getlist",
        true,
        function(ret) {
            vm.faulttype = ret;
        }, {
            "tbname": "faulttype"
        });
        
g_util.load("/getlist",
        true,
        function(ret) {
            vm.represults = ret;
        }, {
            "tbname": "represult"
        });
        
g_util.load("/getlist",
        true,
        function(ret) {
            vm.supresults = ret;
        }, {
            "tbname": "supresult"
        });

</script>
