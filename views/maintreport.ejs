                <td class="a-left">{{maintreport.mainttype}}</td>
								<td class="a-left">{{maintreport.time}}</td>
								<td class="a-left">{{maintreport.leaselocation}}</td>
                <td class="a-right a-right ">{{maintreport.remarks}}</td>
                <td class="last">
                    <a class="btn btn-info btn-xs" @click="editmaintreport(maintreport,index)"><i class="fa fa-pencil"></i>修改</a>
                    <a class="btn btn-danger btn-xs" @click="deletemaintreport(maintreport,index)"><i class="fa fa-trash-o"></i>删除</a>
               </td> 
              </tr>
	
            </tbody>					
          </table>  
		  <div class="btn-group" v-for ="n in pageCout">
		   <button class="btn btn-info" @click="gopage(n)"  v-bind:class="activeNumber === n ? 'active' : ''">{{n}}</button>
