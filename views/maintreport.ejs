<script>

var maintreports = [];
var pagesize = 10;

var vm = new Vue({
	el: "#maintreport-table",
	data: {	
		maintreport:{},
		maintreporteditshow:false,
		maintreportshow:true,
		maintreportaddshow:false,
		activeNumber:1,
		pageCout:1,
		maintreports: []
	},
	methods: {
		viewmaintreport: function (maintreport) {	
					
			g_util.load("/maintreportquery",
				true,
				function (result) {	
				lyview(result);
			}, {
				"maintreportid": maintreport.id
			});
		},
		editmaintreport: function (maintreport) {		
			editview(maintreport);
		},
		deletemaintreport: function (maintreport,maintreportindex) {
			layer.confirm('删除&nbsp&nbsp' + maintreport.mainttype + '&nbsp?', {
				icon: 2,
				title: '警告：请谨慎操作，删除动作不可逆！'
			}, function (index) {
				g_util.load("/maintreportdelete", false, function (ret) {	
					var mindex =0;
					for(var i=0;i<maintreports.length;i++){
						if(maintreports[i].id == maintreport.id){
						mindex = i;
						}
					}
					maintreports.splice(mindex,1);		
					reshen(vm.activeNumber);			
				}, {
					"maintreportid": maintreport.id
				});
				layer.close(index);
			});
		},
		addmaintreport:function () {
			vm.maintreportaddshow = true;				
		},
		closemaintreportadd:function(){
			vm.maintreportaddshow = false;	
		},
		submitmaintreportadd:function(){
		
			vm.maintreport.age = new Date().toLocaleDateString();
			vm.maintreport.status = 0;
			delete vm.maintreport.id;
			delete vm.maintreport.createdAt;
			delete vm.maintreport.updatedAt;
			delete vm.maintreport.deletedAt;
			
			console.log(JSON.stringify(vm.maintreport));
			
			g_util.load("/maintreportadd",
				true,
				function (result) {	
				if(result.status==0){
					layer.alert("添加成功");
					vm.maintreportaddshow = false;
					maintreports.push(result.result);
					reshen(vm.pageCout);
				}else{
					layer.alert("添加失败,错误原因为"+JSON.stringify(result.result));
				}	
			},vm.maintreport);			
		},
		convertDate:function(date){
			return new Date(date).toLocaleDateStringString();
		},
		gopage:function(n){
			reshen(n);		
		}
	}
})

function reshen(n){
	vm.pageCout = Math.ceil(maintreports.length/pagesize);
	n=n?n:1;
	vm.maintreports = maintreports.slice((n-1)*10,n*10);
	vm.activeNumber = n;
}

function editview(maintreport){
	vm.maintreport = maintreport;
	delete vm.maintreport.createdAt;
	delete vm.maintreport.updatedAt;
	delete vm.maintreport.deletedAt;
	vm.maintreporteditshow = true;
	layer.open({
		type:1,
		title:"维护信息修改",
		area: '800px',		
		scrollbar : false,
		content:$("#editdlg"),
		btn:["修改","关闭"],
		yes:function(index){			
			layer.close(index);
	
			g_util.load("/maintreportedit",
			true,
			function (result) {
			if(result=="ok"){
					vm.maintreporteditshow = false;
					maintreport = vm.maintreport;
					layer.alert("修改成功");
				}else{
					layer.alert("修改失败,错误原因为"+result.result);
				}	
			}, vm.maintreport);
			
			
		},
		cancel:function(index){	
			vm.maintreporteditshow = false;				
			layer.close(index);
		},
		btn2:function(index){	
			vm.maintreporteditshow = false;				
			layer.close(index);
		}
		
	});

}

var g_util = new Utils();

g_util.load("/maintreport",
	true,
	function (ret) {
	maintreports = ret;
	reshen(1);	
}, {});

</script>
